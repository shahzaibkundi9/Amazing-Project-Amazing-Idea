
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  orders    Order[]
  createdAt DateTime @default(now())
}

model Order {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  status     String   @default("pending") // pending → awaiting_advance → confirmed
  metadata   Json?    // AI ya WhatsApp automation data
  createdAt  DateTime @default(now())
}
model Payment {
  id          String   @id @default(cuid())
  userId      String
  orderId     String
  method      String   // easypaisa, jazzcash, bank
  amount      Int
  screenshot  String?  // Cloudinary URL
  status      String   @default("pending") // pending → awaiting → paid → rejected
  createdAt   DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  order Order @relation(fields: [orderId], references: [id])
}


model Chat {
  id         String   @id @default(cuid())
  userId     String
  orderId    String?
  message    String?
  type       String   // text, image, payment_notice
  sender     String   // user, bot, admin, whatsapp
  createdAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  order Order @relation(fields: [orderId], references: [id])
}


model AIProvider {
  id        String   @id @default(cuid())
  name      String
  apiKey    String?
  enabled   Boolean  @default(false)
  priority  Int      @default(1)
  createdAt DateTime @default(now())
}

model Template {
  id        String   @id @default(cuid())
  title     String
  category  String
  content   String
  createdAt DateTime @default(now())
}

model Heartbeat {
  id        String   @id @default(cuid())
  service   String
  createdAt DateTime @default(now())
}
